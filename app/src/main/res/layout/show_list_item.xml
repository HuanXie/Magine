<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/showImage"
        android:layout_width="@dimen/show_image_size"
        android:layout_height="@dimen/show_image_size"
        android:layout_margin="@dimen/general_vertical_margin"
        android:contentDescription="@string/content_description_image_show"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/showTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/showTitle"
        android:layout_width="@dimen/ignore_due_to_constraints"
        android:layout_height="@dimen/ignore_due_to_constraints"
        android:layout_marginStart="@dimen/general_vertical_margin"
        android:layout_marginEnd="@dimen/general_vertical_margin"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/title_l"
        app:layout_constraintBottom_toBottomOf="@id/showImage"
        app:layout_constraintLeft_toRightOf="@id/showImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/showImage"
        tools:text="show title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
